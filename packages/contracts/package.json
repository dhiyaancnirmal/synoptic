{
  "name": "@synoptic/contracts",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "check:node": "node ../../scripts/check-node-version.mjs",
    "prebuild": "pnpm check:node",
    "build": "CI=true HARDHAT_DISABLE_TELEMETRY_PROMPT=true HARDHAT_TELEMETRY_ENABLED=false hardhat compile",
    "pretest": "pnpm check:node",
    "test": "CI=true HARDHAT_DISABLE_TELEMETRY_PROMPT=true HARDHAT_TELEMETRY_ENABLED=false hardhat test",
    "predeploy:contracts": "pnpm check:node",
    "deploy:contracts": "CI=true HARDHAT_DISABLE_TELEMETRY_PROMPT=true HARDHAT_TELEMETRY_ENABLED=false hardhat run scripts/deploy.ts --network kiteTestnet",
    "preclean": "pnpm check:node",
    "clean": "CI=true HARDHAT_DISABLE_TELEMETRY_PROMPT=true HARDHAT_TELEMETRY_ENABLED=false hardhat clean"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/node": "22.7.5",
    "hardhat": "^2.22.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
