{
  "name": "synoptic",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=22.22.0 <23.0.0"
  },
  "volta": {
    "node": "22.22.0",
    "pnpm": "9.15.4"
  },
  "scripts": {
    "check:node": "node scripts/check-node-version.mjs",
    "preinstall": "pnpm check:node",
    "dev": "pnpm check:node && turbo dev",
    "build": "pnpm check:node && turbo build",
    "lint": "pnpm check:node && turbo lint",
    "typecheck": "pnpm check:node && turbo typecheck",
    "test": "pnpm check:node && pnpm guard:backend && turbo test",
    "test:e2e:dashboard": "pnpm --filter @synoptic/dashboard test:e2e",
    "guard:backend": "pnpm check:node && node scripts/backend-guardrails.mjs",
    "db:push": "turbo db:push --filter=@synoptic/db",
    "db:generate": "turbo db:generate --filter=@synoptic/db",
    "db:migrate": "turbo db:migrate --filter=@synoptic/db",
    "db:seed": "turbo seed --filter=@synoptic/db",
    "deploy:contracts": "turbo deploy:contracts --filter=@synoptic/contracts",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "10.0.1",
    "@types/node": "25.3.0",
    "eslint": "10.0.0",
    "globals": "17.3.0",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "turbo": "2.8.10",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs,json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
