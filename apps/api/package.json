{
  "name": "@synoptic/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "tsx src/scripts/check-db.ts",
    "dev": "tsx watch --env-file=.env.local src/index.ts",
    "dev:setup": "pnpm prisma:migrate:deploy && pnpm prisma:seed",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:status": "prisma migrate status",
    "prisma:seed": "prisma db seed",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "tsx --test src/middleware/**/*.test.ts src/services/*.test.ts src/services/**/*.test.ts",
    "test:integration": "tsx --test src/integration/**/*.test.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@synoptic/types": "workspace:*",
    "compression": "1.8.1",
    "cors": "2.8.6",
    "express": "5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "8.1.0",
    "jsonwebtoken": "^9.0.3",
    "pino": "^10.3.1",
    "siwe": "^3.0.0",
    "socket.io": "4.8.3",
    "viem": "^2.46.2",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@types/compression": "1.8.1",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/supertest": "^6.0.3",
    "prisma": "^6.16.2",
    "supertest": "^7.2.2",
    "tsx": "4.21.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
