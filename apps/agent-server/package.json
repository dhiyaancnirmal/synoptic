{
  "name": "@synoptic/agent-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --out-dir dist",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "tsx --test src/**/*.test.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/websocket": "^11.2.0",
    "@synoptic/agent-core": "workspace:*",
    "@synoptic/db": "workspace:*",
    "@synoptic/types": "workspace:*",
    "ethers": "^6.16.0",
    "fastify": "^5.6.1",
    "pino": "^9.9.0"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "tsx": "^4.21.0"
  }
}
