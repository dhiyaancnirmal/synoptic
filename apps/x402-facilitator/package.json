{
  "name": "@synoptic/x402-facilitator",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --out-dir dist",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "tsx --test src/**/*.test.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "ethers": "^6.16.0",
    "fastify": "^5.6.1"
  },
  "devDependencies": {
    "@types/node": "22.7.5",
    "tsup": "^8.5.0",
    "tsx": "^4.21.0",
    "typescript": "5.9.3"
  }
}
